{
  "name": "fluid-booking-form-ux-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "node -e \"require('fs').mkdirSync('dist', { recursive: true })\"",
    "build": "npm run build:html && npm run build:css && npm run build:js",
    "build:html": "pug src/index.pug --basedir src --out dist",
    "build:css": "sass src/style.scss dist/style.css",
    "build:js": "node -e \"require('fs').copyFileSync('src/script.js','dist/script.js')\"",
    "watch:html": "pug src/index.pug --basedir src --out dist --watch",
    "watch:css": "sass --watch src/style.scss:dist/style.css"
  },
  "devDependencies": {
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.77.5"
  }
}
